<%= form_for [@project, @task] do |f| %>
  <% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title:"Tasking App Notification", sticky:false) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_area :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :estimated_start_date %>
    <%= f.date_field :estimated_start_date, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :duration%>
    <%= f.number_field :duration, class:"form-control", :step => 0.1 %>
  </div>

  <%= f.submit 'Save', class:"btn btn-primary btn-block" %>
<% end %>
