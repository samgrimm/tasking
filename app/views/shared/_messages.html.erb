<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title:"Tasking App Alert", sticky:false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title:"Tasking App Error", sticky:false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title:"Tasking App Notification", sticky:false) %>
<% end %>
